{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["prettier"],
  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
